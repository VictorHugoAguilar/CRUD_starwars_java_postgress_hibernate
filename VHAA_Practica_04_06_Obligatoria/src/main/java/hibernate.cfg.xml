<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/starwars</property>
		<property name="hibernate.connection.username">postgres</property>
		<property name="hibernate.default_schema">public</property>
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		<property name="show_sql">false</property>
		<property name="format_sql">false</property>
		<mapping class="com.tema4.models.Films" />
		<mapping class="com.tema4.models.People" />
		<mapping class="com.tema4.models.Planets" />
		<mapping class="com.tema4.models.Species" />
		<mapping class="com.tema4.models.Starships" />
		<mapping class="com.tema4.models.Vehicles" />
	</session-factory>
</hibernate-configuration>
